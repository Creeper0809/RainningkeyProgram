<Window x:Class="RainningkeyProgram.BlockSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Block Settings"
        SizeToContent="WidthAndHeight"
        MinWidth="400"
        MinHeight="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 타이틀 영역 -->
            <RowDefinition Height="*"/>
            <!-- 설정 Border 영역 -->
            <RowDefinition Height="Auto"/>
            <!-- OK 버튼 영역 -->
        </Grid.RowDefinitions>

        <!-- 상단 타이틀 -->
        <TextBlock Text="Block Settings" 
                   Grid.Row="0"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="#333"
                   Margin="0,0,0,10"/>

        <!-- 설정 영역(테두리) -->
        <Border Grid.Row="1"
                BorderBrush="#CCC"
                BorderThickness="1"
                CornerRadius="8"
                Background="White">
            <Grid Margin="15">
                <!-- 왼쪽(라벨), 오른쪽(컨트롤) 2열 -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!-- 6행: Width, Height, BlockColor, RainEffect, RainColor, RainZIndex -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Width -->
                <TextBlock Text="Width (x):"
                           Grid.Row="0" Grid.Column="0"
                           Margin="0,0,10,10"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"/>
                <TextBox x:Name="WidthBox"
                         Grid.Row="0" Grid.Column="1"
                         Margin="0,0,0,10"
                         Width="80"/>

                <!-- Height -->
                <TextBlock Text="Height (y):"
                           Grid.Row="1" Grid.Column="0"
                           Margin="0,0,10,10"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"/>
                <TextBox x:Name="HeightBox"
                         Grid.Row="1" Grid.Column="1"
                         Margin="0,0,0,10"
                         Width="80"/>

                <!-- Block Color -->
                <TextBlock Text="Block Color:"
                           Grid.Row="2" Grid.Column="0"
                           Margin="0,0,10,10"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"/>
                <ComboBox x:Name="BlockColorCombo"
                          Grid.Row="2" Grid.Column="1"
                          Margin="0,0,0,10"
                          Width="120">
                    <ComboBoxItem Content="Red"/>
                    <ComboBoxItem Content="Orange"/>
                    <ComboBoxItem Content="Yellow"/>
                    <ComboBoxItem Content="Green"/>
                    <ComboBoxItem Content="Blue"/>
                    <ComboBoxItem Content="Indigo"/>
                    <ComboBoxItem Content="Violet"/>
                </ComboBox>

                <!-- Rain Effect 체크박스 -->
                <TextBlock Text="Rain Effect:"
                           Grid.Row="3" Grid.Column="0"
                           Margin="0,0,10,10"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"/>
                <CheckBox x:Name="RainEffectCheck"
                          Grid.Row="3" Grid.Column="1"
                          Margin="0,0,0,10"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"/>

                <!-- Rain Color -->
                <TextBlock Text="Rain Color:"
                           Grid.Row="4" Grid.Column="0"
                           Margin="0,0,10,10"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"/>
                <ComboBox x:Name="RainColorCombo"
                          Grid.Row="4" Grid.Column="1"
                          Margin="0,0,0,10"
                          Width="120">
                    <ComboBoxItem Content="Red"/>
                    <ComboBoxItem Content="Orange"/>
                    <ComboBoxItem Content="Yellow"/>
                    <ComboBoxItem Content="Green"/>
                    <ComboBoxItem Content="Blue"/>
                    <ComboBoxItem Content="Indigo"/>
                    <ComboBoxItem Content="Violet"/>
                </ComboBox>

                <!-- Rain Z-Index -->
                <TextBlock Text="Rain Z-Index:"
                           Grid.Row="5" Grid.Column="0"
                           Margin="0,0,10,0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"/>
                <ComboBox x:Name="RainZIndexCombo"
                          Grid.Row="5" Grid.Column="1"
                          Width="120">
                    <ComboBoxItem Content="Front" IsSelected="True"/>
                    <ComboBoxItem Content="Back"/>
                </ComboBox>
            </Grid>
        </Border>

        <!-- 하단 OK 버튼 -->
        <Button Content="OK"
                Grid.Row="2"
                Width="80"
                Height="30"
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                Click="OkButton_Click"/>
    </Grid>
</Window>
